{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-websocket-app/shared/environments": [
        "libs/shared/environments/src/index.ts"
      ],
      "@ng-websocket-app/session/domain": ["libs/session/domain/src/index.ts"],
      "@ng-websocket-app/session/feature-create": [
        "libs/session/feature-create/src/index.ts"
      ],
      "@ng-websocket-app/session/feature-join": [
        "libs/session/feature-join/src/index.ts"
      ],
      "@ng-websocket-app/theme/core": ["libs/theme/core/src/index.ts"],
      "@ng-websocket-app/session/shell-start": [
        "libs/session/shell-start/src/index.ts"
      ],
      "@ng-websocket-app/notifications/domain": [
        "libs/notifications/domain/src/index.ts"
      ],
      "@ng-websocket-app/shared/core": ["libs/shared/core/src/index.ts"],
      "@ng-websocket-app/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@ng-websocket-app/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
